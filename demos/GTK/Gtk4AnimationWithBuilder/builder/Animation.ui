<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.96.1 -->
<interface>
  <!-- interface-name Animation -->
  <!-- interface-copyright gfoidl -->
  <!-- interface-authors gfoidl -->
  <requires lib="gtk" version="4.6"/>
  <object class="GtkApplicationWindow" id="animationWindow">
    <property name="default-height">400</property>
    <property name="default-width">600</property>
    <property name="resizable">False</property>
    <property name="title">Cairo Animation Demo</property>
    <child>
      <object class="GtkBox">
        <property name="css-classes">main-box</property>
        <property name="margin-bottom">12</property>
        <property name="margin-end">12</property>
        <property name="margin-start">12</property>
        <property name="margin-top">12</property>
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <child>
          <object class="GtkBox">
            <child>
              <object class="GtkCheckButton" id="_showTrajectoryCheckButton">
                <property name="active">True</property>
                <property name="label">show trajectory</property>
              </object>
            </child>
            <child>
              <object class="GtkCheckButton" id="_showCrosshairsCheckButton">
                <property name="active">True</property>
                <property name="label">show crosshairs</property>
              </object>
            </child>
            <child>
              <object class="GtkCheckButton" id="_saveImagesCheckButton">
                <property name="halign">end</property>
                <property name="hexpand">True</property>
                <property name="label">save images</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkDrawingArea" id="_drawingArea">
            <property name="content-height">400</property>
            <property name="content-width">600</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <child>
              <object class="GtkLabel" id="_iterationLabel">
                <property name="halign">start</property>
                <property name="label">Iteration: 0</property>
                <property name="single-line-mode">True</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="_fpsLabel">
                <property name="halign">end</property>
                <property name="hexpand">True</property>
                <property name="label">FPS: 120</property>
                <property name="single-line-mode">True</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
