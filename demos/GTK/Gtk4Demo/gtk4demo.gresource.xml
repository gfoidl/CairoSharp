<?xml version="1.0" encoding="UTF-8"?>
<!--
    https://docs.gtk.org/gio/struct.Resource.html
    https://gnome.pages.gitlab.gnome.org/libsoup/gio/glib-compile-resources.html

    Compile with
    glib-compile-resources gtk4demo.gresource.xml

    Inspect with
    gresource.exe list gtk4demo.gresource

    GTK programs can be found on Windows e.g. under C:\Program Files\msys64\ucrt64\bin
-->
<gresources>
    <gresource prefix="/at/gfoidl/cairo/gtk4/demo/ui">
        <file alias="windows.ui"              compressed="true">builder/windows.ui</file>
        <file alias="colormapdropdownitem.ui" compressed="true">builder/colormapdropdownitem.ui</file>
    </gresource>
    <gresource prefix="/at/gfoidl/cairo/gtk4/demo/styles">
        <file>builder/main.css</file>
    </gresource>
    
    <gresource prefix="/at/gfoidl/cairo/gtk4/demo">
        <!-- Instead of the alias it could also be a separate gresource element with the prefix -->
        <file preprocess="xml-stripblanks" alias="function/peaks.svg">images/functions/peaks_function.svg</file>
        <file preprocess="xml-stripblanks" alias="function/peaks-orig.svg">images/functions/peaks_function_orig.svg</file>
        <file preprocess="xml-stripblanks" alias="function/mexican.svg">images/functions/mexican_hat_function.svg</file>
    </gresource>

    <!-- This is the default theme that GTK assumes for the App (with the correct applicationId set). -->
    <!-- https://discourse.gnome.org/t/how-are-icon-names-translated-in-gtk/20520 -->
    <gresource prefix="/at/gfoidl/cairo/gtk4/demo/icons">
        <file alias="gtk4demo.svg">../../../icon.svg</file>

        <file preprocess="xml-stripblanks" alias="colormap_default.svg">images/icons/edit-tag-symbolic.svg</file>
        <file preprocess="xml-stripblanks" alias="colormap_optimized.svg">images/icons/favorite-new-symbolic.svg</file>
        <file preprocess="xml-stripblanks" alias="stock-eye-symbolic.svg">images/icons/stock-eye-symbolic.svg</file>
    </gresource>
</gresources>
