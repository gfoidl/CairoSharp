  <object class="GtkWindow" id="pixelWindow">
    <property name="destroy-with-parent">True</property>
    <property name="hide-on-close">True</property>
    <property name="modal">True</property>
    <property name="resizable">False</property>
    <property name="title">Pixel graphics</property>
    <child>
      <object class="GtkBox">
        <property name="margin-bottom">10</property>
        <property name="margin-end">10</property>
        <property name="margin-start">10</property>
        <property name="margin-top">10</property>
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        <child>
          <object class="GtkPicture" id="_equationImage"/>
        </child>
        <child>
          <object class="GtkSeparator"/>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">10</property>
            <child>
              <object class="GtkCenterBox">
                <child type="start">
                  <object class="GtkDropDown" id="_colorMapsDropDown">
                    <property name="margin-end">10</property>
                    <property name="search-match-mode">substring</property>
                    <property name="selected" bind-source="_colorMapsSpinButton" bind-property="value" bind-flags="bidirectional | sync-create">4294967295</property>
                    <property name="width-request">165</property>
                  </object>
                </child>
                <child type="center">
                  <object class="GtkBox">
                    <property name="spacing">10</property>
                    <child>
                      <object class="GtkSpinButton" id="_colorMapsSpinButton">
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="page-size">2.0</property>
                            <property name="step-increment">1.0</property>
                          </object>
                        </property>
                        <property name="wrap">True</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="_colorMapInvertedCheckButton">
                        <property name="label">invert color map</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkButton" id="_pixelSaveAsPngButton">
                    <property name="icon-name">document-save</property>
                    <property name="tooltip-text">Save as PNG</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="spacing">10</property>
                <child>
                  <object class="GtkCheckButton" id="_grayscaleCheckButton">
                    <property name="label">gray scale</property>
                  </object>
                </child>
                <child>
                  <object class="GtkDropDown" id="_grayscaleModeDropDown">
                    <property name="visible" bind-source="_grayscaleCheckButton" bind-property="active" bind-flags="sync-create">True</property>
                    <property name="width-request">200</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkSeparator"/>
        </child>
        <child>
          <object class="GtkBox" id="_colorMapInfoBox">
            <property name="orientation">vertical</property>
            <property name="spacing">10</property>
            <property name="visible">False</property>
            <child>
              <object class="GtkExpander">
                <property name="label">Info about color map</property>
                <child>
                  <object class="GtkBox">
                    <property name="spacing">10</property>
                    <child>
                      <object class="GtkTextView" id="_colorMapInfoTextView">
                        <property name="cursor-visible">False</property>
                        <property name="editable">False</property>
                        <property name="hexpand">True</property>
                        <property name="pixels-above-lines">2</property>
                        <property name="pixels-below-lines">2</property>
                        <property name="wrap-mode">word</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="_showLightnessPlotButton">
                        <property name="halign">end</property>
                        <property name="icon-name">stock-eye-symbolic</property>
                        <property name="tooltip-text">Show lightness characteristic plot for color map</property>
                        <property name="valign">start</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkSeparator"/>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkDrawingArea" id="_drawingAreaPixels">
            <property name="content-height">400</property>
            <property name="content-width">400</property>
            <property name="halign">center</property>
            <child>
              <object class="GtkPopoverMenu" id="_drawingAreaPixelsPopoverMenu">
                <property name="flags">nested</property>
                <property name="menu-model">pixelsContextMenu</property>
                <property name="position">right</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
  <menu id="pixelsContextMenu">
    <section>
      <item>
        <attribute name="action">winPix.colorMapInvert</attribute>
        <attribute name="label">invert color map</attribute>
      </item>
    </section>
    <section>
      <attribute name="label">Gray</attribute>
      <item>
        <attribute name="action">winPix.colorMapGrayscale</attribute>
        <attribute name="label">grayscale</attribute>
      </item>
      <submenu id="_grayscaleModeSubmenu">
        <attribute name="label">grayscale mode</attribute>
        <item>
          <attribute name="action">winPix.grayScaleLightness</attribute>
          <attribute name="label">Lightness</attribute>
        </item>
        <item>
          <attribute name="action">winPix.grayScaleAverage</attribute>
          <attribute name="label">Average</attribute>
        </item>
        <item>
          <attribute name="action">winPix.grayScaleLuminosity</attribute>
          <attribute name="label">Luminosity</attribute>
        </item>
        <item>
          <attribute name="action">winPix.grayScaleCieLab</attribute>
          <attribute name="label">CieLab</attribute>
        </item>
        <item>
          <attribute name="action">winPix.grayScaleGammaExpandedAverage</attribute>
          <attribute name="label">Gamma expanded average</attribute>
        </item>
      </submenu>
    </section>
  </menu>
</interface>
