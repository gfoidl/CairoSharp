      <item>
        <attribute name="action">app.funcPeaks</attribute>
        <attribute name="label">_Peaks function</attribute>
      </item>
      <item>
        <attribute name="action">app.funcPeaksOrig</attribute>
        <attribute name="label">Peaks function (_original)</attribute>
