<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>net8.0</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="..\CairoDemo\Program.cs" Link="Program.cs" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="gfoidl.CairoSharp" Version="0.1.0-dev" Condition="'$(Configuration)' == 'Debug'" />
        <PackageReference Include="gfoidl.CairoSharp" Version="0.1.0"     Condition="'$(Configuration)' != 'Debug'" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="..\CairoDemo\*.png" Link="%(FileName).png" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

</Project>
